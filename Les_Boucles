# Exercice 3.1

for i in range(1,11):
        j = 7 * i
        print("7 *", i, "=", j)
print('---------------------------------')

def table_de_multiplication(n):
    for i in range(1,11):
        print(n, '*', i, "=", n*i)
print('---------------------------------')

